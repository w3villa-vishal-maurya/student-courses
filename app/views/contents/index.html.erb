<%= stylesheet_link_tag('student_index') %>
<div class="nav">
  <h1>Content Dashboard</h1>
</div>
<div class="row">
  <% @content.each do |content|%>
    <div class="col-3 card">
      <div class="text">
        <div class="course-header">
          <h3><%= link_to "#{content.content_title}"%></h3>
        </div>
        <div class="row">
          <p class="article"><%= content.content_description %></p>
          <% if @student_id %>
            <%= button_to "Buy Now", course_buy_path(student_id: @student_id,course_id: course.id), class: "btn btn-primary" %>
          <%end%>
        </div>
      </div>
    </div>
  <%end%>
</div>
